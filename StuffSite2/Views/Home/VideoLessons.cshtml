@model List<StuffSite2.Models.Videos>
@{
    ViewBag.Title = "VideoLessons";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    string startRow= "<div class=\"row\">";
    string endRow = " </div>";
}

<h2>VideoLessons</h2>

@for (int i = 0; i < Model.Count<StuffSite2.Models.Videos>(); i++)
{
    if (i % 3 == 0) {
         @Html.Raw(startRow)     
    }
    @Html.Partial("_PartialVideoLesson", Model.ElementAt<StuffSite2.Models.Videos>(i));


    if (i % 3 == 2 || i== (Model.Count<StuffSite2.Models.Videos>()-1)) {
           @Html.Raw(endRow)
     }
 }
<br>
               



